<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie</title>
    <%- include('./partials/css.ejs') %>
    <link rel="stylesheet" href="/css/result_pages/movie_result.css" />
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %>
    
    <!-- showcase -->
    <div class="grid_container">
      <% movies.forEach(movie => { %>
      <div class="grid-items">
        <h5 style="text-align: center; color: ghostwhite"><%= movie.Title %><h5/>
        <img src="<%=movie.Poster%>" class="poster" style="margin-left: 30%" />
        
        <form action="/movie_details" target="_blank" method="POST">
          <input  class="more" type="submit" value="<%= movie.imdbID %>" name="ID" /> 
        </form>
       
      </div>
      <% })%>
    </div>
    <script>
     
    </script>
    <%- include("./partials/footer.ejs") %> <%- include('./partials/jQuery.ejs')
    %>
  </body>
</html>
